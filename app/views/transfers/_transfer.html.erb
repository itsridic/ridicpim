<tr id="<%= transfer.id %>">
  <td class="nowrap">
    <%= link_to fa_icon("search"), transfer %>
    <%= link_to fa_icon("pencil"), edit_transfer_path(transfer), remote: true %>
    <%= link_to fa_icon("trash" ), transfer, method: :delete, data: { confirm: "Are you sure?" }, remote: true %>
  </td>
  <td><%= from_location(transfer) %></td>
  <td><%= to_location(transfer) %></td>
  <td><%= transfer.product.name %></td>
  <td><%= transfer.quantity %></td>
  <td><%= transfer.description %></td>
</tr>
