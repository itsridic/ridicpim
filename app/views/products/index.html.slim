.col-md-12
  = link_to "Fetch Products from QBO", fetch_products_path, remote: true, class: "btn btn-sm success-color-dark", id: "fetch-products"
  .spinner
    i[class="fa fa-refresh fa-spin" aria-hidden="true"]
    small Retrieving Products from QBO, please wait...
  h1 Products
  = link_to "New Product", "#new_product", data: { toggle: "modal" }, class: "btn btna-sm btn-primary"
  table.table.table-striped
    thead
      th
      th Name
      th Amazon SKU
      th Price
      th qbo_id
    tbody#products
      - cache 'products' do
        = render @products, cached: true
#new_product.modal.fade
  = render 'product_form', name: "New"
